<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/spinnerFondo"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/viewFondo"
        app:layout_constraintEnd_toEndOf="@+id/spinnerTexto"
        app:layout_constraintStart_toStartOf="@+id/spinnerTexto"
        app:layout_constraintTop_toTopOf="@+id/viewFondo"
        />
    <!-- android:prompt="@string/promptFondo" -->

    <TextView
        android:id="@+id/viewTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/colorTexto"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerTexto"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toEndOf="@+id/viewTexto"
        app:layout_constraintTop_toTopOf="@+id/viewTexto"
        android:prompt="@string/promptTexto"/>

    <TextView
        android:id="@+id/viewFondo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/colorFondo"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/viewTexto"
        app:layout_constraintTop_toBottomOf="@+id/viewTexto" />

    <EditText
        android:id="@+id/editAreaTexto"
        android:layout_width="359dp"
        android:layout_height="268dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewFondo" />

</android.support.constraint.ConstraintLayout>